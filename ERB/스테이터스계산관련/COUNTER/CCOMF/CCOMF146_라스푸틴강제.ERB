;*********************************************************************************************
;カウンターコマンド：라스푸틴 강제
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF146(ARG)

	;몸의자세の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,4,ARG)
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:쾌M += 100
	SOURCE:PLAYER:쾌M += 100
	SOURCE:ARG:성행동 += 150
	SOURCE:ARG:유혹 += 150
	SOURCE:ARG:도발 += 150
	SOURCE:ARG:강요 += 200
	SOURCE:ARG:정복 += 140
	EXP:ARG:키스경험 ++
	EXP:PLAYER:키스경험 ++

	MAXBASE:PLAYER:정력 = MAX(MAXBASE:PLAYER:정력,MIN(MAXBASE:PLAYER:정력 * 105 / 100, 5000))
	BASE:PLAYER:정력 = MIN(MAXBASE:PLAYER:정력,BASE:PLAYER:정력 + 750)
	SIF PLAYER == MASTER
		TALENT:PLAYER:농후정액 = 1
	;사정장소（1=질내 2=애널 3=수음 4=口淫 5=파이즈리 6=스마타 7=풋잡 8=体表 9=애널봉사 10=道具 11=触手 12=Ａ고문 13=Ｖ고문）

	;マスターカウンター制御
	;(ビット立ちで不可 0=엉덩이를 쓰다듬는다 1=껴안는다 2=키스한다 3=가슴애무 4=애널애무 5=클리애무 6=指挿入れ 7=치마를 넘긴다)
	;=============================
	CALL 카운터삽입됨지속처리(ARG)

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE146(ARG)

	SIF !HAS_PENIS(PLAYER)
		RETURN 0
	SIF !ABL:ARG:정액중독 && !ABL:ARG:질내사정중독 && !ABL:ARG:항내사정중독
		RETURN 0
	SIF !ABL:ARG:욕망
		RETURN 0
RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER146(커맨드번호, ARG, 기본치)
#DIM 커맨드번호
#DIM 기본치
#DIMS 카운터타입

	;카운터타입設定
	;=============================
	카운터타입 = 탈의강요
	기본치 --
	;実行判定値算出式
	;=============================
	LOCAL = 기본치 + (ABL:ARG:정액중독 + ABL:ARG:질내사정중독 + ABL:ARG:항내사정중독) / 2
	IF (ABL:ARG:정액중독 + ABL:ARG:질내사정중독 + ABL:ARG:항내사정중독) > 2 && BASE:PLAYER:정력 * 100 / MAXBASE:PLAYER:정력 < 70
		TIMES LOCAL, 1.25
	ENDIF
	;카운터타입別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:커맨드번호, 1)
	LOCAL *= COUNTER_TYPE(카운터타입, ARG)

RETURN LOCAL

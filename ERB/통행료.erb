@통행료징수(ARG)
#DIM 통행료
#DIM 에누리
통행료 = 1500
에누리 = 0
IF ARG == 1
    IF ITEM:홍마자유이용권
        RETURN 1
    ENDIF
    통행료 += 1000
    에누리 += ABL:58:친밀 * 150
    에누리 += CFLAG:58:탄막승부승리 * 700
    ;0이 아닌게 있다면 통행료보다 에누리가 무조건 많거나 같아지므로...무료 통과지
    에누리 += 통행료 * TALENT:58:연모
    에누리 += 통행료 * TALENT:58:연인
    IF 통행료 > 에누리
        통행료 -= 에누리
        PRINTFORML 메이링이 지나가려는 %마스터를% 붙잡고 통행료를 걷으려 하였다
        PRINTFORML 통행료 : {통행료}
        PRINTFORML 현재 소지금 : {MONEY}
        PRINTFORML 내시겠습니까?
        PRINTFORML [0] 예
        PRINTFORML [1] 아뇨
        INPUT
        IF RESULT == 0
            IF MONEY >= 통행료
                PRINTFORML {통행료}만큼 내자 메이링이 문을 열어주었다
                MONEY -= 통행료
                RETURN 1
            ELSE
                PRINTFORML 돈이 부족하다...
                RETURN 0
            ENDIF
        ELSE
            RETURN 0
        ENDIF
    ELSE
        PRINTFORML 메이링은 잠시 길을 막았지만 이내 통행자가 %CALLNAME:MASTER%인걸 알아채곤 싱긋 웃으며 문을 열었다
        RETURN 1
    ENDIF
ELSEIF ARG == 2
    에누리 += ABL:60:친밀 * 150
    에누리 += CFLAG:60:탄막승부승리 * 900
    에누리 += 통행료 * TALENT:60:연모
    에누리 += 통행료 * TALENT:60:연인
    IF CFLAG:MASTER:데이트중&&!CFLAG:60:데이트중
        에누리 = 0
    ENDIF
    IF 통행료 > 에누리
        통행료 -= 에누리
        PRINTFORML 파르시가 지나가려는 %마스터를% 붙잡고 통행료를 걷으려 하였다
        PRINTFORML 통행료 : {통행료}
        PRINTFORML 현재 소지금 : {MONEY}
        PRINTFORML 내시겠습니까?
        PRINTFORML [0] 예
        PRINTFORML [1] 아뇨
        INPUT
        IF RESULT == 0
            IF MONEY >= 통행료
                PRINTFORML {통행료}만큼 내자 파르시가 길을 비켜주었다
                MONEY -= 통행료
                RETURN 1
            ELSE
                PRINTFORML 돈이 부족하다...
                RETURN 0
            ENDIF
        ELSE
            RETURN 0
        ENDIF
    ELSE
        PRINTFORML 파르시는 잠시 길을 막았지만 이내 통행자가 %CALLNAME:MASTER%인걸 알아채곤 싱긋 웃으며 옆으로 비켜주었다
        RETURN 1
    ENDIF
ENDIF

@통행료뜯기(ARG)
#DIM 마스터집
마스터집 = MAIN_MAP
IF 마스터집 == 9&&ARG == 946&&CFLAG:60:현재위치 == 946&&(!FLAG:지저주민증&&FLAG:직장정보 != W_구지옥가도&&FLAG:직장정보 != W_지령전)
    CALL 통행료징수(2)
    IF RESULT == 1
        FLAG:지저통행권 = 1
        RETURN 0
    ELSEIF RESULT == 0
        RETURN 1
    ENDIF
ELSEIF 마스터집 == 3&&ARG == 301&&CFLAG:58:현재위치 == 301&&(!FLAG:홍마관거주증 && FLAG:직장정보 != W_홍마관객실 && FLAG:직장정보 != W_대도서관)
    CALL 통행료징수(1)
    IF RESULT == 1
        FLAG:홍마관출입증 = 1
        RETURN 0
    ELSEIF RESULT == 0
        RETURN 1
    ENDIF
ELSEIF ARG == 340&&CFLAG:58:현재위치 == 340&&(!FLAG:홍마관거주증 && FLAG:직장정보 != W_홍마관객실 && FLAG:직장정보 != W_대도서관)
    CALL 통행료징수(1)
    IF RESULT == 1
        FLAG:홍마관출입증 = 1
        RETURN 0
    ELSEIF RESULT == 0
        RETURN 1
    ENDIF
ELSEIF ARG == 920&&CFLAG:60:현재위치 == 920&&(!FLAG:지저주민증&&FLAG:직장정보 != W_구지옥가도&&FLAG:직장정보 != W_지령전)
    CALL 통행료징수(2)
    IF RESULT == 1
        FLAG:지저통행권 = 1
        RETURN 0
    ELSEIF RESULT == 0
        RETURN 1
    ENDIF
ELSE
    RETURN 0
ENDIF
RETURN 0
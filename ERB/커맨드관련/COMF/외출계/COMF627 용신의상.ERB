IF (IS_COLD_LOW && 저기압위치 != "寒冷渦通過" && DAY:2 != 2) || (IS_COLD_LOW && DAY:2 == 2) || (IS_SoJ_LOW == 2 && 저기압위치 != "二つ玉低気圧通過") || CAN_CUMULUS:0 == 5 || CAN_CUMULUS:2 == 2

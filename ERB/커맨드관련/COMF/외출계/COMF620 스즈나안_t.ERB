;대본가게
@COM620
#DIM CHARISMA
#DIM ItemId
#DIM Borrow
#DIM DYNAMIC 사본구매
#DIM DYNAMIC C_책값
$C_LOOP
C_책값 = 3000
IF 사본구매
	C_책값 *= 10
ENDIF
DRAWLINE
IF !CHARISMA
	PRINTFORML 소지금:%금액표시(MONEY)%
ELSE
	PRINTFORML 소지카리스마:{MONEY:2}
ENDIF
PRINTFORML 「\@ !사본구매 ? 임차료 # 구매비 \@는 모두 ￦{C_책값} 입니다」
DRAWLINE
FOR LOCAL,1, BookTitles + 1
	ItemId = LOCAL + 100
	PRINTFORM [{LOCAL}] %ITEMNAME:ItemId%
	IF ITEM:ItemId
		;---- EDIT START ---------------------------------
		SETCOLOR C_AQUA
		;---- EDIT END -----------------------------------
		PRINTFORML (%마스터가% \@ITEM:ItemId == 2 ? 가지고 # 빌리고\@ 있다)
		;---- EDIT START ---------------------------------
		RESETCOLOR
		SIF ITEM:ItemId == 1
			Borrow = ItemId
		;---- EDIT END -----------------------------------
	ELSEIF 0;GETBIT (FLAG:1011,LOCAL)
		PRINTL (대출중)
	ELSE
		PRINTL 　
	ENDIF
NEXT

PRINTFORML [99] \@ 사본구매 ? 대여 모드 # 사본 구매\@
IF !CHARISMA
	PRINTFORML [100] 카리스마 지불
ELSE
	PRINTFORML [100] 현금지불
ENDIF
DRAWLINE
PRINTL [0] 그만둔다

$LOOP
INPUT

IF RESULT == 100
	IF !CHARISMA
		PRINTFORMW 「카리스마로 지불해???」
		PRINTFORMW 「그러니까……그럼 {C_책값 / 300} 카리스마? 로 괜찮아……」
		IF MONEY:2 < C_책값 / 300
			PRINTFORMW 카리스마가 부족하다
			GOTO C_LOOP
		ENDIF
	ELSE
		PRINTFORMW 「아, 돈으로 지불하는거구나」
	ENDIF
	PRINTFORML 
	CHARISMA = !CHARISMA
	GOTO C_LOOP
ELSEIF RESULT == 99
	사본구매 = !사본구매
	GOTO C_LOOP
ELSEIF RESULT == 0
	RETURN -1
ELSE
	IF !CHARISMA && MONEY < C_책값
		PRINTW 돈이 모자랐다…
		RETURN -1
	ENDIF
	IF ITEM:(100 + RESULT) == 2
		PRINTW 이미 산 책이다
		RETURN -1
	ENDIF
	IF INRANGE(RESULT, 1, BookTitles)
		;KR판 추가수정, 책 반납기능 추가
		;---- EDIT START ---------------------------------
		IF Borrow
			IF INRANGE(RESULT, 1, BookTitles)
				IF ITEM:(100 + RESULT) != 2
					LOCALS = 2권 이상은 대출할 수 없어/아니면 반납할꺼야? 반납해도 대출비는 반환되지 않아
					IF CFLAG:[[코스즈]]:현재위치 == CFLAG:PLAYER:현재위치
						CALL SPTALK, [[코스즈]], "通常", 0, @"%LOCALS%", 1
						SIF TARGET != [[코스즈]]
							RESETCOLOR
					ELSE
						CALL SPTALK, 0, "通常", 12, @"%LOCALS%", 1
					ENDIF
					RESETCOLOR
					PRINTFORML [1] 반납한다
					PRINTFORML [2] 반납하지 않는다
					INPUT

					IF RESULT == 1
						FLAG:대본반환기한 = 0
						FOR LOCAL,1,BookTitles + 1
							IF ITEM:(100 + LOCAL) > 0
								ITEM:(100 + LOCAL) = 0
								CLEARBIT FLAG:1011,LOCAL
							ENDIF
						NEXT
						PRINTW 빌리고 있던 책을 돌려주었습니다
						Borrow = 0
						GOTO C_LOOP
					ELSEIF RESULT == 2
						GOTO C_LOOP
					ENDIF
				ENDIF
			ENDIF
		;---- EDIT END -----------------------------------
		ELSEIF 0 && GETBIT (FLAG:1011,RESULT)
			LOCALS = 「대출중입니다」
			IF CFLAG:[[코스즈]]:현재위치 == CFLAG:PLAYER:현재위치
				CALL SPTALK, [[코스즈]], "通常", 0, @"%LOCALS%", 1
				SIF TARGET != [[코스즈]]
					RESETCOLOR
			ELSE
				CALL SPTALK, 0, "通常", 12, @"%LOCALS%", 1
			ENDIF
		ELSE
			IF 사본구매
				IF !CHARISMA
					MONEY -= C_책값
				ELSE
					MONEY:2 -= C_책값/300
				ENDIF
				ITEM:(100 + RESULT) = 2
				PRINTFORML %조사처리(ITEMNAME:(100 + RESULT),"를")% 샀다
				LOCALS = 「구매해 주셔서 감사합니다」
				IF CFLAG:[[코스즈]]:현재위치 == CFLAG:PLAYER:현재위치
					CALL SPTALK, [[코스즈]], "笑顔", 0, @"%LOCALS%", 1
					SIF TARGET != [[코스즈]]
						RESETCOLOR
				ELSE
					CALL SPTALK, 0, "笑顔", 12, @"%LOCALS%", 1
				ENDIF
			ELSE
				SETBIT FLAG:1011,RESULT
				IF !CHARISMA
					MONEY -= C_책값
				ELSE
					MONEY:2 -= C_책값/300
				ENDIF
				ITEM:(100 + RESULT) = 1
				FLAG:대본반환기한 = 8
				TFLAG:193 = 1
				PRINTFORML %조사처리(ITEMNAME:(100 + RESULT),"를")% 빌렸다
				LOCALS = 「감사합니다」/「대출 기간은 일주일간입니다」 
				IF CFLAG:[[코스즈]]:현재위치 == CFLAG:PLAYER:현재위치
					CALL SPTALK, [[코스즈]], "笑顔", 0, @"%LOCALS%", 1
					SIF TARGET != [[코스즈]]
						RESETCOLOR
				ELSE
					CALL SPTALK, 0, "笑顔", 12, @"%LOCALS%", 1
				ENDIF
			ENDIF
			RETURN 1
		ENDIF
	ELSEIF RESULT == 0
		RETURN -1
	ELSE
		GOTO LOOP
	ENDIF
ENDIF

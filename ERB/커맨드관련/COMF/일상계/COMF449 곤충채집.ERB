;곤충채집
@COM449
#DIM CHARA
#DIM ラックM
#DIM ラックT
#DIM パワーM
#DIM パワーT
#DIM 相方が捕った
相方が捕った = 0

;参加者判定
IF FLAG:데이트상대
	CHARA = FLAG:데이트상대
;仕事中はダメ
ELSEIF TARGET && ABL:TARGET:친밀 >= 5 - TALENT:TARGET:채집Lv && SHIRAHU(TARGET) && CFLAG:행동 != 5
	CHARA = TARGET
ELSE
	CHARA = 0
ENDIF

;ラック=1～1000
ラックM = MIN((CFLAG:MASTER:오늘의운세 + 1 + (TFLAG:행운보정 * 100)), 1000)
SIF CHARA
	ラックT = CFLAG:CHARA:오늘의운세 + 1
;最低1,最大10
パワーM = LIMIT(ラックM / 200 + TALENT:MASTER:채집Lv, 1, 10)
SIF CHARA
	パワーT = LIMIT(ラックT / 200 + TALENT:CHARA:채집Lv, 1, 10)

FOR LOCAL, 0, 5
	REUSELASTLINE  \@ CHARA ? %CALLNAME:CHARA%と一緒に #  \@虫捕り中.%"." * LOCAL%
	TWAIT 150, 1
NEXT

;捕獲判定
IF RAND:パワーM < 2
	MUSHI_CAGE = 0
	IF CHARA
		IF RAND:パワーT < 2
			MUSHI_CAGE = 0
		ELSE
			CALL MUSHITORI(パワーT, ラックT)
			MUSHI_CAGE = RESULT
			相方が捕った = 1
		ENDIF
	ENDIF
ELSE
	CALL MUSHITORI(パワーM, ラックM)
	MUSHI_CAGE = RESULT
ENDIF

;基本経験値
EXP:MASTER:채집경험 ++
SIF CHARA
	EXP:CHARA:채집경험 ++
;捕った人の追加経験値
IF MUSHI_CAGE
	IF 相方が捕った
		EXP:CHARA:채집경험 ++
	ELSE
		EXP:MASTER:채집경험 ++
	ENDIF
ENDIF
;데이트경험
IF CHK_DATENOW(CFLAG:CHARA:데이트중) && CHARA
	EXP:MASTER:데이트경험 ++
	EXP:CHARA:데이트경험 ++
ENDIF

;成果に関わらず気力体力減少
DOWNBASE:MASTER:체력 = 150
DOWNBASE:MASTER:기력 = 200
IF CHARA
	DOWNBASE:CHARA:체력 = 150
	DOWNBASE:CHARA:기력 = 200
ENDIF

IF MUSHI_CAGE
	;処理の関係でここで捕獲メッセージを流す,
	IF 相方が捕った
		CALL SHOW_MUSHI_DATA(MUSHI_CAGE)
		DRAWLINE
		PRINTFORML %CALLNAME:CHARA%が%MUSHI_NAME%を捕まえた！
		;＠口上を挟むかも
		PRINTL [ 1] なかなかやるじゃん
		CALL COLORMESSAGE(@"[ 2] 殺してでも　うばいとる", C_RED, 1)
		PRINTL [ 3] ゆずってくれ　たのむ！！
		INPUT
		;結果はメッセージの方で
		IF RESULT == 3
			IF ABL:CHARA:순종 < 6 || ABL:CHARA:친밀 < 6 || MARK:CHARA:반발각인 || TALENT:CHARA:기분 < 0
				TFLAG:193 = -1
			ELSEIF ABL:CHARA:순종 < 8 || ABL:CHARA:친밀 < 8
				TFLAG:193 = 3
			ELSE
				TFLAG:193 = 4
			ENDIF
		ELSEIF RESULT == 2
			TFLAG:193 = -2
		ELSE
			TFLAG:193 = 2
		ENDIF
	ELSE
		CALL SHOW_MUSHI_DATA(MUSHI_CAGE)
		PRINTFORML %MUSHI_NAME%を捕まえた！
		TFLAG:193 = 1
	ENDIF
ELSE
	TFLAG:193 = 0
ENDIF

;参加者のソース,同一コマンド制限を受けないので控えめに,ただし捕まえられないと毎回半減
IF CHARA
	;固定で獲得するソース
	SOURCE:CHARA:환락 = 400
	SOURCE:CHARA:사랑 = 50
	
	;ABL:従順をみる
	IF ABL:순종 <= 1
		SOURCE:CHARA:환락 += (ABL:순종 * 40)
		SOURCE:CHARA:사랑 += (ABL:친밀 * 20)
	ELSEIF ABL:순종 <= 3
		SOURCE:CHARA:환락 += 200 + (ABL:순종 * 40)
		SOURCE:CHARA:사랑 += 50 + (ABL:친밀 * 30)
	ELSEIF ABL:순종 <= 5
		SOURCE:CHARA:환락 += 500 + (ABL:순종 * 40)
		SOURCE:CHARA:사랑 += 200 + (ABL:친밀 * 30)
	ELSEIF ABL:순종 <= 8
		SOURCE:CHARA:환락 += 750 + (ABL:순종 * 60)
		SOURCE:CHARA:사랑 += 300 + (ABL:친밀 * 40)
	ELSEIF ABL:순종 <= 11
		SOURCE:CHARA:환락 += 1000 + (ABL:순종 * 60)
		SOURCE:CHARA:사랑 += 600 + (ABL:친밀 * 40)
	ELSE
		SOURCE:CHARA:환락 += 1600 + (ABL:순종 * 30)
		SOURCE:CHARA:사랑 += 1000 + (ABL:친밀 * 20)
	ENDIF
	SIF CHARA != FLAG:데이트상대 
		SOURCE:CHARA:사랑 = 0
	
	SOURCE:CHARA:수동 = 200 + 100 * ABL:순종
	SOURCE:CHARA:정복 = 200 + 100 * ABL:새드끼
	
	;面倒なので[낚시를 한다]をトレースして2倍(時間効率で等倍）
	TIMES SOURCE:CHARA:환락 , 2.00
	TIMES SOURCE:CHARA:수동 , 2.00
	TIMES SOURCE:CHARA:정복 , 2.00
	TIMES SOURCE:CHARA:사랑 , 2.00
	
	;結果による補正
	SELECTCASE TFLAG:193
	;殺してでもうばいとる
	CASE -2
		TIMES SOURCE:CHARA:환락 , 0.50
		TIMES SOURCE:CHARA:수동 , 0.50
		TIMES SOURCE:CHARA:정복 , 0.50
		SOURCE:CHARA:반감 = 500
		DOWNBASE:MASTER:체력 += 150
		DOWNBASE:MASTER:기력 += 200
		IF CHARA
			DOWNBASE:CHARA:체력 += 150
			DOWNBASE:CHARA:기력 += 200
		ENDIF
	;ゆずってくれ→拒否された
	CASE -1
		SOURCE:CHARA:반감 = 50
	;捕獲失敗
	CASE 0
		TIMES SOURCE:CHARA:환락 , 0.50
		TIMES SOURCE:CHARA:수동 , 0.50
		TIMES SOURCE:CHARA:정복 , 0.50
	;MASTERが捕まえた,補正なし
	CASE 1
	;なかなかやるじゃん
	CASE 2
		TIMES SOURCE:CHARA:환락 , 1.50
		TIMES SOURCE:CHARA:수동 , 1.50
		TIMES SOURCE:CHARA:정복 , 1.50
	;ゆずってくれ→渋々オッケー
	CASE 3
		TIMES SOURCE:CHARA:수동 , 1.50
	;ゆずってくれ→オールオッケー
	CASE 4
		TIMES SOURCE:CHARA:환락 , 1.50
		TIMES SOURCE:CHARA:수동 , 1.50
		TIMES SOURCE:CHARA:사랑 , 1.50
	ENDSELECT

	;その他の補正
	;虫の妖怪は喜ぶ
	IF GET_TRIBENAME(CHARA, GETNUM(TALENT, "요괴")) == "요충"
		TIMES SOURCE:CHARA:환락 , 2.00
		TIMES SOURCE:CHARA:수동 , 2.00
		TIMES SOURCE:CHARA:정복 , 2.00
		TIMES SOURCE:CHARA:사랑 , 2.00
	;チョウチョウはハッピー
	ELSEIF STRCOUNT(MUSHI_TRIBE, "蝶/")
		IF CHARA == [[라바]]
			TIMES SOURCE:CHARA:환락 , 2.00
			TIMES SOURCE:CHARA:수동 , 2.00
			TIMES SOURCE:CHARA:정복 , 2.00
		ELSE
			TIMES SOURCE:CHARA:환락 , 1.50
			TIMES SOURCE:CHARA:수동 , 1.50
			TIMES SOURCE:CHARA:정복 , 1.50
		ENDIF
	;カブト・クワガタもハッピー
	ELSEIF STRCOUNT(MUSHI_TRIBE, "(カブト|クワガタ)")
		TIMES SOURCE:CHARA:환락 , 1.50
		TIMES SOURCE:CHARA:수동 , 1.50
		TIMES SOURCE:CHARA:정복 , 1.50
	ELSEIF MUSHI_RARE <= 3
	;レア度4～7
	ELSEIF MUSHI_RARE <= 7
		TIMES SOURCE:CHARA:환락 , 1.50
		TIMES SOURCE:CHARA:수동 , 1.50
		TIMES SOURCE:CHARA:정복 , 1.50
	;レア度8～9
	ELSE
		TIMES SOURCE:CHARA:환락 , 2.00
		TIMES SOURCE:CHARA:수동 , 2.00
		TIMES SOURCE:CHARA:정복 , 2.00
	ENDIF
	;로터
	SIF MUSHI_NAME == "로터"
		SOURCE:CHARA:욕정 = 500
ENDIF

;시간경과
TIME += 40

;フラグ引き渡し
TFLAG:194 = CHARA

RETURN 1



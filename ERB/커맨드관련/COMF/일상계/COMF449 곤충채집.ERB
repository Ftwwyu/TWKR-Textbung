SIF STRCOUNT(ARGS, "家")
	SETBIT LOCAL, 6
SIF STRCOUNT(ARGS, "달")
	SETBIT LOCAL, 7

IF STRCOUNT(ARGS, "以外")
	FOR LOCAL:1, 0, 8
		INVERTBIT LOCAL:1, LOCAL
	NEXT
ENDIF

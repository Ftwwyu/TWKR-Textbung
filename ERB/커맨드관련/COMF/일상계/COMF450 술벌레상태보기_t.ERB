@CAN_FERMENT(ARG)
#FUNCTION
SIF DAY:10 >= 3
	RETURNF 0
SIF GROUPMATCH(VAR_FERMENT, "그냥 물", "안개의 호수의 물", "지옥 온천의 물", "기적의 물")
	RETURNF 1
RETURNF 0

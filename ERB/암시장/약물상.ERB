@D_약물상인
DRAWLINE
SELECTCASE RAND:5
    CASE 0
        PRINTFORML "어서호세여~"
    CASE 1
        PRINTFORML "흐에? 차즈시는거라도오~?"
    CASE 2
        PRINTFORML "냐하하...둥실둥실~..."
    CASE 3
        PRINTFORML "어라...지금 몇시지..."
    CASE 4
        PRINTFORML "후아아암..."
ENDSELECT
DRAWLINE
PRINTFORML [1] - 구매
PRINTFORML [2] - 판매
PRINTFORML [3] - 설명
PRINTFORML [9] - 돌아간다
DRAWLINE
$LOOP
INPUT
IF RESULT == 9
    RETURN
ELSEIF RESULT == 1
    CALL D_약물구매
ELSEIF RESULT == 2
    CALL D_약물판매
ELSEIF RESULT == 3
    CALL D_약물설명
ELSE
    GOTO LOOP
ENDIF
RESTART

@D_약물구매
VARSET LOCAL
PRINTL
DRAWLINE
FOR LOCAL,1100,1500
    CALL 약물데이터(LOCAL)
    IF RESULT && D_NUM == LOCAL
        PRINTFORMC [{LOCAL,4,RIGHT}] %ITEMNAME:LOCAL,16,RIGHT%　{((ITEMPRICE:LOCAL * 암시장물가)/100)}￦　{ITEM:LOCAL}개　
        LOCAL:1++
        IF LOCAL:1 == 3
            PRINTL
            LOCAL:1 = 0
        ENDIF
        RESULT = 0
    ENDIF
NEXT
PRINTL
DRAWLINE
PRINTFORML [999] 돌아간다
$LOOP
INPUT
IF RESULT == 999
    RETURN
ELSEIF RESULT <= 1100 + 약물리스트한계
    LOCAL = RESULT
    CALL 약물데이터(LOCAL)
    IF RESULT == 1 && D_NUM == LOCAL
        IF MONEY < ((ITEMPRICE:LOCAL * 암시장물가)/100)
            PRINTFORMW 돈이 부족하다
        ELSE
            CALL 약물_설명(LOCAL)
            PRINTFORML %조사처리(ITEMNAME:LOCAL,"을")% 구매할까?
            CALL ASK_YN
            IF RESULT

            ELSE
                MONEY -= ((ITEMPRICE:LOCAL * 암시장물가)/100)
                ITEM:LOCAL++
                PRINTFORML %조사처리(ITEMNAME:LOCAL,"을")% 1개 구매했다
            ENDIF
        ENDIF
    ENDIF
ELSE
    GOTO LOOP
ENDIF
RESTART


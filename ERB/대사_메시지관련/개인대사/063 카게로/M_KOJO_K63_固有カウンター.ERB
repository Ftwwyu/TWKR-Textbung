@UNIQUE_COUNTER1_ABLE_K63
SIF !TALENT:연모
	RETURN 0
SIF ABL:[[카게로]]:혀 < 2
	RETURN 0
SIF TEQUIP:PLAYER:50 >= 0 || TEQUIP:PLAYER:51 >= 0
	RETURN 0
RETURN 1


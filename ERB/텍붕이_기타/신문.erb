@AYAYANEWS()
#DIM LINE
LINE = 0
VARSET 신문내용

;신문제목
신문내용:(LINE++) '= @"　붕　붕　마　루　신　문　　%TOSTR(DAY/30 + 1),6,RIGHT%월호　　　　　　　　저：아야　　　　　　　　　　　　　　　　　　　"
신문내용:(LINE++) '= @"　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　"
신문내용:(LINE++) '= "─"*신문폭

;신문내용:(LINE++) '= ""
CALL AYAYANEWS_내용(LINE)
CALL AYAYANEWS_카리스마(LINE)
CALL AYAYANEWS_잡담(LINE)
PRINTFORMS "┌"+"─" * 신문폭 +"┐"
PRINTL
FOR LOCAL,0,40
    PRINTFORMS "│"+"%신문내용:LOCAL,신문폭 * 2,LEFT%"+"│"
    PRINTL
NEXT
PRINTFORMS "└"+"─" * 신문폭 +"┘"
PRINTL
WAIT

@AYAYANEWS_내용(LINE)
#DIM REF LINE
IF DAY/30 + 1 == 1
    신문내용:(LINE++) '= @"환상향에 나타난 외래인?"
    신문내용:(LINE++) '= @""
    신문내용:(LINE++) '= @"최근 새로운 외래인이 환상향에 정착했다고 합니다"
    신문내용:(LINE++) '= @"그는 %GET_MAPNAME(MAIN_MAP)%에 자리잡았다고 하는데요"
    신문내용:(LINE++) '= @"외래인 치곤 환상향에 성공리에 정착하는 사람이 흔치 않은데, 그는 과연 어떻게 될까요?"
ELSE

ENDIF
신문내용:(LINE++) '= "─"*신문폭

@AYAYANEWS_카리스마(LINE)
#DIM REF LINE
신문내용:(LINE++) '= @"오늘의 카리스마"
신문내용:(LINE++) '= @""
신문내용:(LINE++) '= @"오늘의 카리스마 변동 상황은 %SHOW_TENDENCY(CHARISMA_TENDENCY:NOW_PERIOD())%입니다"
신문내용:(LINE++) '= @"카리스마 공시가격:%금액표시(CHARISMA_NOW())%"
신문내용:(LINE++) '= "─"*신문폭

@AYAYANEWS_잡담(LINE)
#DIM REF LINE
SELECTCASE RAND:4
    CASE 0
        신문내용:(LINE++) '= @"흔들리는 결계?"
        신문내용:(LINE++) '= @""
        신문내용:(LINE++) '= @"최근 환상향 외곽쪽에서 다량의 이상현상이 발생하고 있다는 소식이 있습니다"
        신문내용:(LINE++) '= @"이는 결계의 강도가 약해져가는 것으로 보이며 즉각적인 조치 없이는 위험할수가 있어보입니다"
    CASE 1
        신문내용:(LINE++) '= @"요정주의보"
        신문내용:(LINE++) '= @""
        신문내용:(LINE++) '= @"최근 요정들이 민가를 습격해 재산피해를 입힌다는 소식이 있는데요"
        신문내용:(LINE++) '= @"피해를 막기 위해서 창문과 문을 단단히 고정하고 집 안에 숨어 있을만한 공간을 최소화 하는게 중요합니다"
    CASE 2
        신문내용:(LINE++) '= @"계속되는 폭발사고...대책은?"
        신문내용:(LINE++) '= @""
        신문내용:(LINE++) '= @"최근들어 홍마관이나 영나암 등에서 폭발사고가 빈번히 일어나고 있습니다"
        신문내용:(LINE++) '= @"주된 원인은 잘못된 마력통제 상황이나 가스등 조작 미숙인데요"
        신문내용:(LINE++) '= @"이러한 사고는 일상속에서 흔히 일어날 수 있는만큼 각 가정에서도 안전조치를 취해야할 필요가 있습니다"
    CASE 3
        신문내용:(LINE++) '= @"정체불명의 연기, 과연 안전한가"
        신문내용:(LINE++) '= @""
        신문내용:(LINE++) '= @"최근 환상향 상공에 정체불명의 연기가 분출되고 있습니다"
        신문내용:(LINE++) '= @"각양각색의 이 연기들은 흡입시 환각, 기절 등 유독한 성질을 띄고 있는데요"
        신문내용:(LINE++) '= @"장시간 흡입할 경우 신체에도 대단한 악영향을 끼칠 가능성이 있습니다"
        신문내용:(LINE++) '= @"연기가 발생했을때는 외출을 자제하는 편이 좋습니다"
    CASE 4

ENDSELECT
신문내용:(LINE++) '= "─"*신문폭
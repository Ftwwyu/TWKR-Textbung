@약물데이터(ARG)
VARSET D_자식
SELECTCASE ARG
    CASE GETNUM(ITEM,"감자")
        D_이름 = 감자
        D_NUM = GETNUM(ITEM,"감자")
        D_데미지 = 6
    CASE GETNUM(ITEM,"로터스"),GETNUM(ITEM,"로터스즙"),GETNUM(ITEM,"로터스분말")
        D_이름 = 로터스
        D_NUM = GETNUM(ITEM,"로터스")
        D_데미지 = 8
        D_자식:0 = GETNUM(ITEM,"로터스즙")
        D_자식:1 = GETNUM(ITEM,"로터스분말")
    CASEELSE
        ;약물이 아님
        RETURN 0
ENDSELECT
RETURN 1

@약물자식관계(ARG,ARG:1)
CALL 약물데이터(ARG)
FOR LOCAL,0,10
    IF D_자식:(LOCAL) == ARG:1
        RETURN 1
    ENDIF
NEXT
RETURN 0

@약물효과발동(ARG,ARG:1)
#DIM DYNAMIC 배율
;ARG = 섭취자, ARG:1 = 약물번호
CALL 약물데이터(ARG:1)
SELECTCASE D_섭취타입
    CASE 0 ;경구섭취
        배율 = 10
    CASE 1 ; 흡입
        배율 = 20
    CASE 2 ; 피부 도포
        배율 = 5
ENDSELECT
TBCFLAG:ARG:뇌데미지 += D_데미지 * 배율 / 10
SELECTCASE D_이름
    CASE "감자"
        D_고통변동:ARG:D_변동치 += 35
        D_고통변동:ARG:D_지속시간 += 180
        D_공포변동:ARG:D_변동치 += 35
        D_공포변동:ARG:D_지속시간 += 180

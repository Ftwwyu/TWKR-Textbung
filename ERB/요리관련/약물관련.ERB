        D_반감변동:ARG:D_지속시간 += 180
        D_고통변동:ARG:D_변동치 -= 25
        D_고통변동:ARG:D_지속시간 += 180
        D_불쾌변동:ARG:D_변동치 -= 30
        D_불쾌변동:ARG:D_지속시간 += 180
        D_억울변동:ARG:D_변동치 -= 30
        D_억울변동:ARG:D_지속시간 += 180
        D_치정변동:ARG:D_변동치 -= 25
        D_치정변동:ARG:D_지속시간 += 180
        BASE:ARG:이성 = MAX(0,BASE:ARG:이성 - 200)
ENDSELECT



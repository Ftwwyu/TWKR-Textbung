                        품질 -= 3
                    ELSEIF 시체데이터(T_시체:대상:4,"크기") == 2
                        품질 -= 1
                    ELSEIF 시체데이터(T_시체:대상:4,"크기") == 3
                        품질 -= 8
                    ENDIF
                    TIME += 5
                ELSEIF RESULT == 3
                    IF 시체데이터(T_시체:대상:4,"크기") == 1
                        품질 -= 5
                    ELSEIF 시체데이터(T_시체:대상:4,"크기") == 2
                        품질 += 7
                    ELSEIF 시체데이터(T_시체:대상:4,"크기") == 3
                        품질 -= 5
                    ENDIF
                    TIME += 10
                ELSEIF RESULT == 4
                    IF 시체데이터(T_시체:대상:4,"크기") == 1
                        품질 -= 10
                    ELSEIF 시체데이터(T_시체:대상:4,"크기") == 2
                        품질 += 5
                    ELSEIF 시체데이터(T_시체:대상:4,"크기") == 3
                        품질 += 7
                    ENDIF
                    TIME += 15
                ENDIF
                PRINTFORML 끓는물에 잠시 넣을까?
                CALL ASK_YN
                IF T_시체:대상:4 == 5
                    IF RESULT == 0
                        품질 += 9
                    ENDIF
                ELSE
                    IF RESULT == 1
                        품질 += 9
                    ENDIF
                ENDIF
                PRINTFORML 가죽을 벗길까? 아니면 털을 뽑을까?
                PRINTFORML [0] 가죽을 벗긴다
                PRINTFORML [1] 털을 뽑는다
                INPUT
                IF T_시체:대상:4 == 5
                    IF RESULT == 1
                        품질 += 7
                    ENDIF
                ELSE
                    IF RESULT == 0
                        품질 += 7
                    ENDIF
                ENDIF
                품질 += RAND:15

                ;--------------------------
                SELECTCASE ABL:MASTER:요리기능
                    CASE 0
                        TIMES 품질, 0.6
                    CASE 1
                        TIMES 품질, 0.8
                    CASE 2
                        TIMES 품질, 1.0
                    CASE 3
                        TIMES 품질, 1.2
                    CASE 4
                        TIMES 품질, 1.4
                    CASE 5 
                        TIMES 품질, 1.6
                    CASE 6
                        TIMES 품질, 1.8
                    CASE 7
                        TIMES 품질, 2.0

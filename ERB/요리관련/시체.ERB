@시체생성(ARG)
#DIM DYNAMIC 전리품타입
#DIM DYNAMIC 빈칸
IF GROUPMATCH(ARG,71,83)
    전리품타입 = 8
    GOTO MAKE_CORPSE
ENDIF
IF ARG == 23
    전리품타입 = 7
    GOTO MAKE_CORPSE
ENDIF
IF CHECK_CHARA(ARG,"츠쿠모가미")
    전리품타입 = 6
    GOTO MAKE_CORPSE
ENDIF
IF GROUPMATCH(ARG,16,28,29,37,41,42,50,59,101,110,129,133,140)
    전리품타입 = 5
    GOTO MAKE_CORPSE
ENDIF
IF GROUPMATCH(ARG,108,107,100,53,52)
    전리품타입 = 4
    GOTO MAKE_CORPSE
ENDIF
IF CHECK_CHARA(ARG,"인형")||CHECK_CHARA(ARG,"유령")
    전리품타입 = 3
    GOTO MAKE_CORPSE
ENDIF
IF GROUPMATCH(ARG,10,64,67,97,120,128,130)
    전리품타입 = 2
    GOTO MAKE_CORPSE
ENDIF
IF CHECK_CHARA(ARG,"요정")
    전리품타입 = 1
    GOTO MAKE_CORPSE
ENDIF
IF CHECK_CHARA(ARG,"인간") || CHECK_CHARA(ARG,"요괴")
    전리품타입 = 0
    GOTO MAKE_CORPSE
ENDIF


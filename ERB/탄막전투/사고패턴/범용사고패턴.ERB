            ELSEIF 모드 == "혼합"
                CALLFORMF T_SKILL{SKILL_ARRAY:J}("공격력")
                수치2 = RESULT
                CALLFORMF T_SKILL{SKILL_ARRAY:J}("명중률")
                수치2 = (수치1 * RESULT)/100
            ENDIF
        ENDIF
        IF 수치1 < 수치2
            TEMP:0 = SKILL_ARRAY:J
            SKILL_ARRAY:J = SKILL_ARRAY:(J+1)
            SKILL_ARRAY:(J+1) = TEMP:0
        ENDIF
    NEXT
NEXT



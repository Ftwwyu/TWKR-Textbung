                LOCAL = VARSIZE("SKILL_ARRAY") - MATCH(SKILL_ARRAY, 0)
                SIF RESULT == 0 && !LOCAL ;선택 가능한 스킬이 없음
                    CONTINUE
                스킬번호 = RAND:LOCAL
                CALL CAST_SPELL(ARG, SKILL_ARRAY:스킬번호)
                BREAK
        ENDSELECT
    ELSE
        SELECTCASE RAND:3
            CASE 0
                IF T_MOVEABLE(ARG)
                    CALL T_MOVE(ARG,-1)
                ELSE
                    CALL T_COM턴넘김(ARG)
                ENDIF
            CASE 1
                IF T_MOVEABLE(ARG)
                    CALL T_MOVE(ARG,1)
                ELSE
                    CALL T_COM턴넘김(ARG)
                ENDIF
            CASE 2
                CALL T_COM턴넘김(ARG)
        ENDSELECT
        BREAK
    ENDIF
WEND

        돌격포인트 += 1
    ENDIF
    IF ARG능력치(T_시전자,"체력") > ARG능력치(T_시전자반대,"체력") - ARG능력치(T_시전자,"공격력")
        돌격포인트 += 2
    ENDIF

    IF 성향 == "퍼지"
        돌격포인트 += RAND:4
        후퇴포인트 += RAND:4
    ELSEIF 성향 == "호전"
        돌격포인트 += 2
    ELSEIF 성향 == "방어"
        후퇴포인트 += 2
    ELSEIF 성향 == "광포"
        돌격포인트 += 3
    ELSE
        후퇴포인트 += 2
    ENDIF
    돌격포인트 += RAND:3
    후퇴포인트 += RAND:3
ELSEIF TYPE == "스킬"
    ;아직 안 만듬



ENDIF


하한선 = 적정사거리 - 변동치
상한선 = 적정사거리 + 변동치
IF 돌격포인트 >= 후퇴포인트
    IF TB_거리() < 하한선
        ;너무 가깝다
        LOCAL = 하한선 - TB_거리_은신(사용자반대(T_시전자))
        IF LOCAL > 이동력
            방향결정 = 4 ; 전속 후진
        ELSE
            방향결정 = 2 ; 반속 후진
        ENDIF
    ELSEIF INRANGE(TB_거리(), 하한선, 상한선)
        ;적정
        방향결정 = 2 ;정지
    ELSEIF TB_거리_은신(사용자반대(T_시전자)) > 상한선
        ;너무 가깝다
        LOCAL = TB_거리_은신(사용자반대(T_시전자)) - 상한선
        IF LOCAL > 이동력
            방향결정 = 0 ; 전속 전진
        ELSE
            방향결정 = 1 ; 반속 전진
        ENDIF
    ENDIF
ELSE
    방향결정 = 4 ; 전속 후진
ENDIF

SELECTCASE 방향결정
    CASE 0 ;전진
        CALL T_MOVE(T_시전자,TB_방향(),0,0)
    CASE 1 ;전진
        CALL T_MOVE(T_시전자,TB_방향(),0,1)
    CASE 2 ; 정지
        CALL T_COM턴넘김(T_시전자)
    CASE 3 ;후진
        CALL T_MOVE(T_시전자,-1 * TB_방향(),0,1)
    CASE 4 ;후진
        CALL T_MOVE(T_시전자,-1 * TB_방향(),0,0)
ENDSELECT

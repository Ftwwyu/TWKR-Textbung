            IF 항복불가 == 0
                CALL T_항복(ARG)
                BREAK
            ELSEIF ARG능력치(ARG,"속도") + ARG능력치(ARG,"운") + RAND:10 >= ARG반대능력치(ARG,"속도") + ARG반대능력치(ARG,"운") && 도망불가:1 == 0
                CALL T_COM도망간다(ARG)
                BREAK
            ENDIF
        ENDIF
        공격점수 = 150 + RAND:50
        회피점수 = 80 + RAND:50
        IF TB_SUM_REMAIN(ARG,TCV_저주) > 0&&TB_SUM_REMAIN(ARG,TCV_저주) < 3&&RAND:3 == 0
            ;저주의 경우는 그나마 높은 확률로 해제 시도
            IF 소지스킬타입:5 == 1
                행동 = 2
                해주시도 = 1
            ENDIF
        ENDIF
        IF TB_SUM_REMAIN(ARG,TCV_출혈) > 3&&RAND:5 == 0
            ;출혈이 그 다음
            IF 소지스킬타입:5 == 1
                행동 = 2
                해주시도 = 1
            ENDIF
        ENDIF
        IF TB_SUM_REMAIN(ARG,TCV_독) > 5&&RAND:10 == 0
            ;독은 거의 해제 안함
            IF 소지스킬타입:5 == 1
                행동 = 2
                해주시도 = 1
            ENDIF
        ENDIF
        IF TB_SUM_REMAIN(ARG,TCV_실명)
            공격점수 -= 20
            회피점수 += 55
        ENDIF
        IF TB_SUM_REMAIN(사용자반대(ARG),TCV_취약)
            공격점수 += 50
            회피점수 -= 10
        ENDIF
        IF TB_SUM_REMAIN(사용자반대(ARG),TCV_기절)
            공격점수 += 40
            회피점수 -= 10
        ENDIF
        IF TB_SUM_REMAIN(사용자반대(ARG),TCV_혼란)
            공격점수 += 15
            회피점수 -= 5
        ENDIF
        $광포패턴루프
        IF 행동 != 2
            IF 공격점수 >= 회피점수
                IF 소지스킬타입:0 == 1
                    행동 = 2
                ELSE
                    행동 = 0
                ENDIF
            ELSEIF 회피점수 > 공격점수
                IF 소지스킬타입:1 == 1&&RAND:3 == 0
                    행동 = 2
                ELSE
                    행동 = 1
                ENDIF
            ENDIF
        ENDIF
        ;======
        SELECTCASE 행동
            CASE 0
                ;통상공격
                CALL T_COM공격한다
                BREAK
            CASE 1
                ;회피행동
                IF 1
                    CALL T_COM회피한다(ARG)
                    BREAK
                ENDIF
            CASE 2
                IF 사고패턴루프수 >= 30
                    SELECTCASE RAND:10
                        CASE 0,1,2,3
                            CALL T_COM공격한다
                            BREAK
                        CASE 4,5,6,7,8,9
                            CALL T_COM회피한다(ARG)
                            BREAK
                        CASEELSE
                            CALL T_COM공격한다
                            BREAK
                    ENDSELECT
                ENDIF
                ;스킬시전
                VARSET 스킬타입
                ;공격형 = bit 1, 방어형 = bit 2, 회복형 = bit 3, 상태이상형 = bit 4, 버프형 = bit 5
                IF 공격점수 >= 회피점수
                    IF 소지스킬타입:0 == 1
                        스킬타입:1 = 1
                    ELSE
                        IF 소지스킬타입:3 == 1
                            스킬타입:1 = 4
                        ELSE
                            회피점수 += 10
                            사고패턴루프수 ++
                            GOTO 광포패턴루프
                        ENDIF
                    ENDIF
                ELSEIF 회피점수 > 공격점수
                    IF 소지스킬타입:1 == 1
                        스킬타입:1 = 2
                    ELSE
                        IF 소지스킬타입:2 == 1
                            스킬타입:1 = 3
                        ELSE
                            IF 소지스킬타입:4 == 1
                                스킬타입:1 = 5
                            ELSE
                                IF 1
                                    CALL T_COM회피한다(ARG)
                                    BREAK
                                ENDIF
                            ENDIF
                        ENDIF
                    ENDIF
                ENDIF
                IF 해주시도 == 1
                    스킬타입:1 = 6
                ENDIF
                SELECTCASE 스킬타입:1
                    CASE 0
                        ;모두
                        스킬타입 = 공격형 + 방어형 + 회복형 + 상태이상형 + 버프형
                    CASE 1, 2, 3, 4, 5, 6
                        SETBIT 스킬타입, 스킬타입:1
                ENDSELECT
                CALL PICK_T_SKILL(ARG, 스킬타입, "공격력")
                ;LOCAL = 선택 가능한 스킬 수
                LOCAL = VARSIZE("SKILL_ARRAY") - MATCH(SKILL_ARRAY, 0)
                SIF RESULT == 0 && !LOCAL ;선택 가능한 스킬이 없음
                    CONTINUE
                스킬번호 = RAND:LOCAL
                CALL CAST_SPELL(ARG, SKILL_ARRAY:스킬번호)
                BREAK
        ENDSELECT
    ELSEIF 행동기회여부(ARG,T_이동행동)
        IF TB_거리_은신(사용자반대(ARG)) > 20 && T_MOVEABLE(ARG)
            CALL T_MOVE(ARG,TB_방향(TB_위치(ARG),TB_위치(사용자반대(ARG))))
        ELSEIF TB_거리_은신(사용자반대(ARG)) < 10 && T_MOVEABLE(ARG)
            CALL T_MOVE(ARG,-1 * TB_방향(TB_위치(ARG),TB_위치(사용자반대(ARG))))
        ELSEIF TB_거리_은신(사용자반대(ARG)) > 30 && T_MOVEABLE(ARG)
            CALL T_MOVE(ARG, TB_방향(TB_위치(ARG),TB_위치(사용자반대(ARG))))
        ELSE
            CALL T_COM턴넘김(ARG)
        ENDIF
        BREAK
    ELSE
        CALL T_COM턴넘김(ARG)
    ENDIF
WEND
RETURN 1



@ONGOING_T_SKILL576(사용자, ARGS, ARG = 0)
#DIM DYNAMIC 사용자
#DIM 남은지속시간, 200 ;캐릭터별 지속시간 저장 배열
#DIM 남은쿨타임, 200 ;캐릭터별 지속시간 저장 배열
#DIM DYNAMIC 피해량
#DIMS DYNAMIC 속성
피해량 = T_SKILL576("공격력")
속성 '= T_SKILL576_STR("속성")
SELECTCASE ARGS
;스킬 발동시 남은 지속시간/쿨타임 처리 부분
CASE "임의쿨타임설정"
    남은쿨타임:사용자 = ARG
CASE "임의지속시간설정"
    남은지속시간:사용자 = ARG
CASE "쿨타임설정"
    남은쿨타임:사용자 = T_SKILL576("쿨타임")
CASE "지속시간설정"
    남은지속시간:사용자 = T_SKILL576("지속시간")
CASE "턴엔드"
    ;매 턴이 지날때마다 지속시간과 쿨타임처리를 하는 부분
    IF 남은지속시간:사용자 > 0
        남은지속시간:사용자--
        CALL ONGOING_T_SKILL576(사용자, "지속효과발동")
    ENDIF
    SIF 남은쿨타임:사용자 > 0
        남은쿨타임:사용자 --
CASE "남은지속시간"
    ;남은 지속시간 표시, 건들일 없다
    RETURN 남은지속시간:사용자
CASE "남은쿨타임"
    ;남은쿨타임을 반환, 건들일 없다
    RETURN 남은쿨타임:사용자
CASE "초기화"
    VARSET 남은쿨타임
VARSET 남은지속시간
CASE "시스템체크"
    ;시스템 메시지에 따른 검사, 패시브 스킬등에 이용, 액티브는 딱히 쓸 일이 있나?

CASE "지속효과발동"
    ;지속적으로 효과가 발동하는 스킬의 경우, 여기에 효과를 입력
    IF 남은지속시간:사용자 > 0

    ENDIF
ENDSELECT

@AFTER_T_SKILL576(사용자)
#DIM DYNAMIC 사용자
#DIM DYNAMIC 명중률
#DIM DYNAMIC 피해량
#DIMS DYNAMIC 속성

;쿨타임은 미리 설정함
CALL ONGOING_T_SKILL576(사용자, "쿨타임설정")

;명중 대응, 특정상황에서 명중률을 변동하고 싶으면 사용
IF TB_SUM_REMAIN(사용자,TCV_실명)&&RAND:2 == 0
    명중률 = T_SKILL576("명중률") / 2
ELSE
    명중률 = T_SKILL576("명중률")
ENDIF
RESULT = 0
SIF T_SKILL576("HP코스트") > 0
    TCVAR:T_시전자:T_체력 -= T_SKILL576("HP코스트")
SIF T_SKILL576("TSP코스트") > 0&&T_시전자 == MASTER
    BASE:T_시전자:TSP -= T_SKILL576("TSP코스트")
IF 스킬명중판정(명중률,576)
    ;명중!
    ;----------------
    ;대사는 이쪽
    ;----------------
    
    SELECTCASE RAND:9
        CASE 0
            ;오오마가츠미, 저주
            PRINTFORML 더러움이 주위에 쏟아진다!
            CALL 통합버프(T_시전자반대,TCV_저주,576,1,7)
        CASE 1
            ;아마테라스, 통구이
            PRINTFORML 타오르는 불길이 눈 앞의 모든걸 불태운다!
            CALL T_데미지(T_시전자반대, 50 * ARG능력치(T_시전자,"지성"), "화염")
        CASE 2
            ;아마츠미카보시, 눈뽕?
            PRINTFORML 반짝이는 빛이 주위를 덮는다!
            CALL T_데미지(T_시전자반대, 20 * ARG능력치(T_시전자,"지성"), "마력")
            CALL 통합버프(T_시전자반대,TCV_실명,576,1,3)
        CASE 3
            ;아메노우즈메노미코토, 장거리 공격 면역
            PRINTFORML %T_시전자의% 몸이 흐릿해졌다!
            CALL 통합버프(T_시전자반대,TCV_회피,576,200,3)
        CASE 4
            ;이시코리메노미코토, 반사
            PRINTFORML 거대 거울이 %T_시전자의% 앞을 가린다!
            CALL T_반격기등록(T_시전자,576,3)
        CASE 5
            ;호노이카즈치노카미, 속박 통구이
            PRINTFORML 뇌우가 %T_시전자반대를% 옭아맨다!
            CALL T_데미지(T_시전자반대, 15 * ARG능력치(T_시전자,"지성"), "화염")
            CALL T_데미지(T_시전자반대, 20 * ARG능력치(T_시전자,"지성"), "전격")
            CALL 통합버프(T_시전자반대,TCV_속박,576,1,3)
        CASE 6
            ;카나야마히코노미코토, 금속 조작
            SELECTCASE RAND:2
                CASE 0
                    PRINTFORML 미세 중금속이 모여 생긴 칼날이 %T_시전자반대를% 베어낸다!
                    CALL T_데미지(T_시전자반대, 15 * ARG능력치(T_시전자,"지성"), "물리")
                    CALL 통합버프(T_시전자반대,TCV_출혈,576,1,4)
                CASE 1
                    PRINTFORML 허공에 생겨난 금속 막대가 강렬한 열과 함께 폭발한다!
                    CALL T_데미지(T_시전자반대, 15 * ARG능력치(T_시전자,"지성"), "화염")
                    CALL 통합버프(T_시전자반대,TCV_화상,576,20 * ARG능력치(T_시전자,"지성") + 400,4)
            ENDSELECT
        CASE 7
            ;이즈노메, 정화
            PRINTFORML 부정함이 사라진다!
            CALL T_해주(T_시전자,6,"모두")
            PRINTFORML {RESULT}개의 해로운 효과가 사라졌다
        CASE 8
            ;헤카티아, 와용와용
            PRINTFORML 끔찍한 형상의 티셔츠가 강제로 착용된다!
            CALL T_데미지(T_시전자반대, 17 * ARG능력치(T_시전자,"지성"), "정신")
    ENDSELECT
    ;----------------
    ;처리는 이쪽, 무언가 효과를 넣으려면 여기에 작성
    ;----------------

    피해량 = T_SKILL576("공격력")
    속성 '= T_SKILL576_STR("속성")
    ;CALL T_데미지(T_시전자반대, 피해량, 속성)
    
    RETURN 1
ELSE
    ;!감나빗!
    SETCOLOR 0xFF4444
    PRINTFORML 빗나감!
    RESETCOLOR
    ;----------------
    ;대사는 이쪽
    ;----------------
    PRINTFORML 무언가 힘을 집중한것 같지만 아무런 일도 없었다
    ;----------------
    ;처리는 이쪽, 무언가 효과를 넣으려면 여기에 작성
    ;----------------
    RETURN 0
ENDIF


    IF 남은지속시간 > 0

    ENDIF
ENDSELECT

@AFTER_T_SKILL109(사용자)
#DIM 사용자
#DIM 명중률
#DIM 피해량
#DIMS 속성

;쿨타임은 미리 설정함
CALL ONGOING_T_SKILL109(사용자, "쿨타임설정")

;명중 대응, 특정상황에서 명중률을 변동하고 싶으면 사용
IF TB_SUM_REMAIN(사용자,TCV_실명)&&RAND:2 == 0
    명중률 = T_SKILL109("명중률") / 2
ELSE
    명중률 = T_SKILL109("명중률")
ENDIF

IF 스킬명중판정(명중률,109)
    ;명중!
    ;----------------
    ;대사는 이쪽
    ;----------------
    PRINTFORML 얼음의 파편이 쏟아진다!
    ;----------------
    ;처리는 이쪽, 무언가 효과를 넣으려면 여기에 작성
    ;----------------

    피해량 = T_SKILL109("공격력")/10
    속성 '= T_SKILL109_STR("속성")
    REPEAT 10
        SIF 스킬명중판정(55,109,1)
            CALL T_데미지(T_턴반대, 피해량, 속성)
    REND
    CALL ONGOING_T_SKILL109(사용자, "지속시간설정")
    RETURN 1
ELSE
    ;!감나빗!
    SETCOLOR 0xFF4444
    PRINTFORML 빗나감!
    RESETCOLOR
    ;----------------
    ;대사는 이쪽
    ;----------------
    PRINTFORML 작은 우박 몇 개가 바람에 나뒹군다...
    ;----------------
    ;처리는 이쪽, 무언가 효과를 넣으려면 여기에 작성
    ;----------------
    RETURN 0
ENDIF


@TB_TYPERESET(ARG,TYPE,NUM)
;ARG의 특정 타입 버프를 해제
#DIM DYNAMIC TYPE
#DIM DYNAMIC NUM
#DIM DYNAMIC NUM2
#DIM DYNAMIC 삭제개수
IF TYPE == -3
    ;버프만 해제
    IF NUM == -1
        FOR LOCAL, 0, TB버프한계
            IF T_버프:TB대상:LOCAL == ARG
                IF IS_BUFF(LOCAL) == 2
                    CALLF TB_RESET(LOCAL)
                    삭제개수++
                ENDIF
            ENDIF
        NEXT
    ELSE
        FOR LOCAL, 0, TB버프한계
            IF T_버프:TB대상:LOCAL == ARG
                IF IS_BUFF(LOCAL) == 2
                    CALLF TB_RESET(LOCAL)
                    삭제개수++
                    NUM2 ++
                ENDIF
            ENDIF
            IF NUM2 >= NUM
                BREAK
            ENDIF
        NEXT
    ENDIF
ELSEIF TYPE == -2
    IF NUM == -1
        FOR LOCAL, 0, TB버프한계
            IF T_버프:TB대상:LOCAL == ARG
                CALLF TB_RESET(LOCAL)
                삭제개수++
            ENDIF
        NEXT
    ELSE
        FOR LOCAL, 0, TB버프한계
            IF T_버프:TB대상:LOCAL == ARG
                CALLF TB_RESET(LOCAL)
                NUM2 ++
                삭제개수++
            ENDIF
            IF NUM2 >= NUM
                BREAK
            ENDIF
        NEXT
    ENDIF
ELSEIF TYPE == -1
    ;디버프만 해제
    IF NUM == -1
        FOR LOCAL, 0, TB버프한계
            IF T_버프:TB대상:LOCAL == ARG
                IF IS_BUFF(LOCAL) == 1
                    CALLF TB_RESET(LOCAL)
                    삭제개수++
                ENDIF
            ENDIF
        NEXT
    ELSE
        FOR LOCAL, 0, TB버프한계
            IF T_버프:TB대상:LOCAL == ARG
                IF IS_BUFF(LOCAL) == 1
                    CALLF TB_RESET(LOCAL)
                    삭제개수++
                    NUM2 ++
                ENDIF
            ENDIF
            IF NUM2 >= NUM
                BREAK
            ENDIF
        NEXT
    ENDIF
ELSE
    FOR LOCAL, 0, TB버프한계
        IF T_버프:TB대상:LOCAL == ARG&&T_버프:TB내용:LOCAL == TYPE
            CALLF TB_RESET(LOCAL)
            삭제개수++
            NUM2 ++
        ENDIF
        IF NUM2 >= NUM
            BREAK
        ENDIF
    NEXT
ENDIF
RETURN 삭제개수


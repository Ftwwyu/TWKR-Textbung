@TB_MINUS_ID(대상,S_ID,NUM,TYPE = -1)
#DIM DYNAMIC 대상
#DIM DYNAMIC NUM
#DIM DYNAMIC S_ID
#DIM DYNAMIC TYPE
FOR LOCAL, 0, TB버프한계
    IF T_버프:TB남은시간:LOCAL != 0
        IF T_버프:TB대상:LOCAL == 대상&&T_버프:TBID:LOCAL == S_ID
            IF TYPE == -1||TYPE == T_버프:TB내용:LOCAL
                T_버프:TB값:LOCAL --
                IF T_버프:TB값:LOCAL < 0
                    T_버프:TB값:LOCAL = 0
                ENDIF
                IF T_버프:TB값:LOCAL == 0
                    CALLF TB_RESET(LOCAL)
                ENDIF
                NUM--
                CALL TB_효과적용(LOCAL)
                IF NUM <= 0
                    RETURN 1
                ENDIF
            ENDIF
        ENDIF
    ENDIF
NEXT

@TB_MINUS_TYPE(대상,S_ID,NUM,TYPE)
#DIM DYNAMIC 대상
#DIM DYNAMIC NUM
#DIM DYNAMIC NUMBUFFER
#DIM DYNAMIC S_ID
#DIM DYNAMIC TYPE
FOR LOCAL, 0, TB버프한계
    IF T_버프:TB남은시간:LOCAL != 0
        IF T_버프:TB대상:LOCAL == 대상&&(T_버프:TBID:LOCAL == S_ID||S_ID == -1)
            IF TYPE == T_버프:TB내용:LOCAL
                NUMBUFFER = NUM - T_버프:TB값:LOCAL
                T_버프:TB값:LOCAL -= NUM
                NUM = 0
                IF T_버프:TB값:LOCAL < 0
                    ;T_버프:TB값:LOCAL < NUM
                    NUM += NUMBUFFER 
                    T_버프:TB값:LOCAL = 0
                ENDIF
                IF T_버프:TB값:LOCAL == 0
                    CALLF TB_RESET(LOCAL)
                ENDIF
                IF NUM <= 0
                    RETURN 0
                ENDIF
            ENDIF
        ENDIF
    ENDIF
NEXT
RETURN NUM


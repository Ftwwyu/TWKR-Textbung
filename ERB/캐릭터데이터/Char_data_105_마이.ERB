@CHARAMOVE_DATA_105(ARG,ARG:2)
LOCAL = 105
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;자기 방, 유키의 방, 광장
			CASE 234, 235, 202
				RETURN 5
			;당신의 방
			CASE 230
				IF TALENT:LOCAL:연모
					RETURN 5
				ELSE
					RETURN -100
				ENDIF
			;가지 않는다
			CASE 220, 225, 221, 222, 224, 226
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 2, 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 21,22,23,27, 51,52,53,56,57
				RETURN 1 
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT


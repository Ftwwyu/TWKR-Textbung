@CHARAMOVE_DATA_24(ARG,ARG:2)
LOCAL = 24
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;시비곡직청, 축생계는 가지 않는다(입구 부분은 나올 때 용)
			CASE 610, 613, 640, 641
				RETURN -10
			CASE 610 TO 618, 640 TO 652
				RETURN -100
			;타인의 집에는 들어가지 않는다
			CASE 608, 609
				RETURN -100
			;특히 이루어
			CASEELSE
				RETURN 0
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 6, 7, 8
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 61,62,63, 71,72,73,74, 81,82,83,84
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT


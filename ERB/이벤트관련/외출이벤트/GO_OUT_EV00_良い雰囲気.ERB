@GO_OUT_CONDITION_EV0
#DIM PAIR
PAIR = FLAG:데이트상대
SIF RAND:10 || GROUPMATCH(PAIR, 0, RANDOM_CHARANUM) 
	RETURN 0
SIF !TALENT:PAIR:사모 && !TALENT:PAIR:연모
	RETURN 0
SIF MARK:PAIR :반발각인 || TALENT:PAIR :기분 < 0
	RETURN 0
CALL GO_OUT_EV0(PAIR)

@GO_OUT_EV0(ARG)
#DIM MULTIPLE

IF TALENT:ARG:유치
	PRINTFORMW 돌아오는 길은 %CALLNAME:ARG%%TEXTR("과 달리기/과 경쟁/를 목말 태워주기")% 하면서 돌아왔다
	CALL PRINT_FACE, ARG, "笑顔" ,,, "照れ"
	PRINTFORML %CALLNAME:ARG%는 아주 즐거워 보인다…
	MULTIPLE = 12
ELSEIF TALENT:ARG:연인
	PRINTFORMW 돌아오는 길은 %CALLNAME:ARG%와 팔짱을 낀 채 돌아왔다
	CALL PRINT_FACE, ARG, "笑顔",,, "照れ"
	PRINTFORML 데이트 마지막까지 행복한 기분이 될 수 있었다…
	MULTIPLE = 13
ELSEIF TALENT:ARG:연모
	PRINTFORMW %CALLNAME:ARG%와 손을 잡고서 돌아가기로 했다
	CALL PRINT_FACE, ARG, "笑顔",,, "照れ"
	PRINTFORML %CALLNAME:ARG%는 무척 기뻐하는 것 같다…
	MULTIPLE = 12
ELSE
	PRINTFORMW 돌아오는 길은 %CALLNAME:ARG%와 손을 잡은 채로 돌아왔다
	CALL PRINT_FACE, ARG, "通常",,, "照れ"
	PRINTFORML 어쩐지 %CALLNAME:ARG%와의 사이가 가까워진 기분이 든다…
	MULTIPLE = 11
ENDIF
PRINTFORMW 
BASE:ARG:무드 = MIN(BASE:ARG:무드 / 10 * MULTIPLE, MAXBASE:ARG:무드)
SIF !TALENT:ARG:유치
	BASE:ARG:이성 = MAX(BASE:ARG:이성 - MULTIPLE * 5, 0)
RETURN 1

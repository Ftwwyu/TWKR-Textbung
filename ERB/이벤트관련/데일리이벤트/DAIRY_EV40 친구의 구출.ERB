LOCAL:1 = 0
FOR LOCAL:2, 0, 5
	FOR LOCAL,0,CHARANUM
		IF CFLAG:LOCAL:감금됨&&CFLAG:LOCAL:감금된날 >= 7
			LOCAL:1++
			IF LOCAL:1 == 대상
				대상 = LOCAL
				GOTO 본체
			ENDIF
		ENDIF
	NEXT
NEXT

